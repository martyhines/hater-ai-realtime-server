{
  "expo": {
    "name": "Hater AI",
    "slug": "hater-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.haterai.app",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSMicrophoneUsageDescription": "Allow Hater AI to access your microphone for speech input and voice features.",
        "NSSpeechRecognitionUsageDescription": "Allow Hater AI to convert your speech to text for voice conversations.",
        "NSPhotoLibraryUsageDescription": "Allow Hater AI to access your photo library to save screenshots.",
        "NSPhotoLibraryAddUsageDescription": "Allow Hater AI to add screenshots to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a1a"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.haterai.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-audio",
      "expo-dev-client"
    ],
    "extra": {
      "eas": {
        "projectId": "e9a67d14-65f2-4bbe-8d1c-df3fe8bb2eb2"
      }
    }
  }
}
